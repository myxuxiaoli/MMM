* {
  margin: 0;
  padding: 0;
}
a {
  text-decoration: none;
}
li {
  list-style: none;
  display: block;
}
body {
  max-width: 640px;
  min-width: 300px;
  margin: 0 auto;
  height: auto;
}
button {
  box-sizing: border-box;
  background-color: #d4d4d4;
  background: #f1f1f1;
  border: 1px solid #bababa;
  border-radius: 5px;
  text-align: center;
  font-size: 14px;
  line-height: 32px;
  overflow: hidden;
  padding: 8px 20px;
}
#topbar {
  width: 100%;
  height: 44px;
  background-color: #ff841d;
}
#topbar > a {
  display: block;
  text-align: center;
  line-height: 44px;
  color: white;
}
#topbar > a > i {
  float: left;
  font-style: normal;
  font-size: 40px;
  margin-left: 2%;
}
#topbar > a #app {
  display: block;
  width: 50px;
  height: 44px;
  margin-top: 5px;
  float: right;
  background: url('../../images/header_app.png') no-repeat;
  background-size: 70%;
}
#container .content {
  width: 100%;
  height: auto;
}
#container .content > ul > li {
  padding: 14px 8px;
  position: relative;
  width: 100%;
  height: 128px;
  border-bottom: 1px solid #ccc;
}
#container .content > ul > li > a {
  display: block;
  position: relative;
}
#container .content > ul > li > a .divimg {
  width: 100px;
  height: 100px;
}
#container .content > ul > li > a .divimg > img {
  width: 100px;
  height: 100px;
}
#container .content > ul > li > a .info {
  font-size: 14px;
  line-height: 24px;
  width: 70%;
  height: 105px;
  position: absolute;
  top: 0px;
  right: 0px;
}
#container .content > ul > li > a .info .title {
  color: #333333;
  word-break: break-all;
  font-size: 15px;
  line-height: 19px;
  min-height: 57px;
  text-align: left;
  font-weight: normal;
}
#container .content > ul > li > a .info .title > span {
  color: #ff6c00;
  display: inline;
}
#container .content > ul > li > a .info .other {
  margin-top: 8px;
  color: #a1a1a1;
}
#container .content > ul > li > a .info .other .mall {
  font-size: 12px;
  float: left;
}
#container .content > ul > li > a .info .other .comment {
  font-size: 12px;
  float: right;
}
#container .content .sortpages {
  width: 100%;
  height: 80px;
  position: relative;
  background-color: #f0f0f0;
}
#container .content .sortpages .prev {
  position: absolute;
  top: 25px;
  margin-left: 30px;
}
#container .content .sortpages #select {
  width: 80px;
  height: 40px;
  border-radius: 10px;
  position: absolute;
  top: 25px;
  left: 50%;
  text-align: center;
  margin-left: -40px;
}
#container .content .sortpages .next {
  position: absolute;
  top: 25px;
  right: 0;
  margin-right: 30px;
}
