#layout {
  /* 限制容器在PC端只能到640px宽度 */
  max-width: 640px;
  min-width: 300px;
  margin: 0px auto;
  background-color: #F1F1F1;
}
#topbar {
  position: relative;
  width: 100%;
  height: 44px;
  padding: 0 8px;
  background-color: #FF8B00;
  border: 1px solid #ccc;
}
#topbar .left {
  position: absolute;
  left: 8px;
  top: 0;
  width: 44px;
  height: 44px;
  font-size: 20px;
  line-height: 44px;
  text-align: center;
  color: #fff;
}
#topbar .center {
  padding: 0 70px;
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  font-size: 20px;
  color: #fff;
}
#topbar .right {
  position: absolute;
  right: 8px;
  top: 0;
  width: 44px;
  height: 44px;
}
#header {
  position: relative;
  width: 100%;
  height: 37px;
  border-left: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
}
#header .btn-group1 {
  float: left;
  width: 30.5%;
}
#header .btn-group1 .btn-default {
  width: 100%;
  height: 36px;
  border: none;
  border-radius: 0;
  font-size: 16px;
}
#header .btn-group1 .dropdown-menu {
  width: 100%;
  padding: 0;
  margin-top: 0;
  border-radius: 0;
}
#header .btn-group1 .dropdown-menu > li {
  padding: 0;
}
#header .btn-group1 .dropdown-menu > li > a {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ccc;
  font-size: 16px;
}
