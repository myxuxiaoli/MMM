#header .nav_search {
  position: absolute;
  left: 0;
  top: 37px;
  width: 100%;
  height: 265px;
  display: none;
  background-color: #f0f0f0;
  z-index: 5;
}
#header .nav_search .search_top {
  position: absolute;
  left: 10px;
  top: 10px;
  width: 100%;
  height: 35px;
}
#header .nav_search .search_top > input {
  width: 90%;
  height: 35px;
}
#header .nav_search .search_top > i {
  position: absolute;
  left: 10px;
  top: 10px;
  font-size: 14px;
  color: #AAAAAA;
}
#header .nav_search .search_top > span {
  position: absolute;
  left: 35px;
  top: 7px;
  font-size: 14px;
  color: #AAAAAA;
}
#header .nav_search .search_top > a {
  position: absolute;
  right: 25px;
  top: 8px;
  font-size: 16px;
  color: #565656;
}
#header .nav_search .search_center {
  position: absolute;
  left: 0px;
  top: 55px;
  width: 100%;
  height: 80px;
  border-bottom: 1px solid #ccc;
}
#header .nav_search .search_center > span {
  position: absolute;
  top: 5px;
  left: 10px;
  font-size: 14px;
  color: #565656;
}
#header .nav_search .search_center > ul {
  position: absolute;
  bottom: 0px;
  width: 100%;
}
#header .nav_search .search_center > ul > li {
  float: left;
  width: 25%;
  margin-left: 10px;
  border: 1px solid #AAAAAA;
  border-radius: 4px;
  height: 32px;
  line-height: 32px;
  text-align: center;
}
#header .nav_search .search_center > ul > li:nth-child(2) {
  background-color: #FF8B00;
}
#header .nav_search .search_bottom {
  position: absolute;
  left: 0;
  top: 135px;
  width: 100%;
  height: 130px;
  box-shadow: 0px 2px 5px #ccc;
}
#header .nav_search .search_bottom > span {
  position: absolute;
  left: 10px;
  top: 15px;
  font-size: 14px;
  color: #565656;
}
#header .nav_search .search_bottom > ul {
  position: relative;
  top: 35px;
}
#header .nav_search .search_bottom > ul > li {
  float: left;
  width: 23%;
  height: 32px;
  line-height: 32px;
  text-align: center;
  margin-top: 10px;
  margin-left: 10px;
  border: 1px solid #aaa;
  border-radius: 3px;
}
#header .nav_search .search_bottom > ul > li:first-child {
  background-color: #FF8B00;
}
#content {
  width: 100%;
  background-color: #F1F1F1;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  overflow: hidden;
}
#content > ul {
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-around;
}
#content > ul > li {
  position: relative;
  float: left;
  width: 47%;
  height: 360px;
  margin-top: 10px;
  background-color: #fff;
}
#content > ul > li > a {
  position: absolute;
  left: 5;
  top: 0;
  width: 100%;
  height: 300px;
}
#content > ul > li > a > img {
  width: 100%;
  height: 100%;
}
#content > ul > li > p {
  position: absolute;
  bottom: 25px;
  left: 0;
  width: 100%;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
#content > ul > li > span {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 25px;
  color: red;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
