        }
        .dropdown-menu {
            width: 100%;
            padding: 0;
            margin-top: 0;
            border-radius: 0;
            >li {
                padding: 0;
                >a {
                    height: 40px;
                    line-height: 40px;
                    border-bottom: 1px solid #ccc;
                    font-size: 16px;
                }
            }
        }
    }
    .btn-group4 {
        float: right;
        width: 8.5%;
        padding: 0;
        .btn-default {
            padding: 0;
            width: 100%;
            height: 37px;
            border: 1px solid #ccc;
            border-radius: 0;
            font-size: 16px;
        }
    }
    .nav_search {
        position: absolute;
        left: 0;
        top: 37px;
        width: 100%;
        height: 265px;
        display: none;
        background-color: #f0f0f0;
        z-index: 5;
        .search_top {
            position: absolute;
            left: 10px;
            top: 10px;
            width: 100%;
            height: 35px;
            >input {
                width: 90%;
                height: 35px;
            }
            >i {
                position: absolute;
                left: 10px;
                top: 10px;
                font-size: 14px;
                color: #AAAAAA;
            }
            >span {
                position: absolute;
                left: 35px;
                top: 7px;
                font-size: 14px;
                color: #AAAAAA;
            }
            >a {
                position: absolute;
                right: 25px;
                top: 8px;
                font-size: 16px;
                color: #565656;
            }
        }
        .search_center {
            position: absolute;
            left: 0px;
            top: 55px;
            width: 100%;
            height: 80px;
            border-bottom: 1px solid #ccc;
            >span {
                position: absolute;
                top: 5px;
                left: 10px;
                font-size: 14px;
                color: #565656;
            }
            >ul {
                position: absolute;
                bottom: 0px;
                width: 100%;
                >li {
                    float: left;
                    width: 25%;
                    margin-left: 10px;
                    border: 1px solid #AAAAAA;
                    border-radius: 4px;
                    height: 32px;
                    line-height: 32px;
                    text-align: center;
                    &:nth-child(2){
                        background-color: #FF8B00;
                    }
                }
            }
        }
        .search_bottom {
            position: absolute;
            left: 0;
            top: 135px;
            width: 100%;
            height: 130px;
            box-shadow: 0px 2px 5px #ccc;
            >span {
                position: absolute;
                left: 10px;
                top: 15px;
                font-size: 14px;
                color: #565656;
            }
            >ul {
                position: relative;
                top: 35px;
                >li {
                    float: left;
                    width: 23%;
                    height: 32px;
                    line-height: 32px;
                    text-align: center;
                    margin-top: 10px;
                    margin-left: 10px;
                    border: 1px solid #aaa;
                    border-radius: 3px;
                    &:first-child {
                        background-color: #FF8B00;
                    }
                }
            }
        }
    }
}

//  主体内容部分
#content {
    width: 100%;
    background-color: #F1F1F1;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    overflow: hidden;
    >ul {
        position: relative;
        left: 0;
        top: 0;
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        justify-content: space-around;
        >li {
            position: relative;
            float: left;
            width: 47%;
            height: 360px;
            margin-top: 10px;
            background-color: #fff;
            >a {
                position: absolute;
                left: 5;
                top: 0;
                width: 100%;
                height: 300px;
                >img {
                    width: 100%;
                    height: 100%;
                }
            }
            >p {
                position: absolute;
                bottom: 25px;
                left: 0;
                width: 100%;
                font-size: 14px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
            >span {
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                font-size: 25px;
                color: red;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
        }
    }
}