
#layout {
    /* 限制容器在PC端只能到640px宽度 */
    max-width: 640px;
    min-width: 300px;
    margin: 0px auto;
    background-color: #F1F1F1;
}

//  顶部通栏
#topbar {
    position: relative;
    width: 100%;
    height: 44px;
    padding: 0 8px;
    background-color: #FF8B00;
    border: 1px solid #ccc;
    .left {
        position: absolute;
        left: 8px;
        top: 0;
        width: 44px;
        height: 44px;
        font-size: 20px;
        line-height: 44px;
        text-align: center;
        color: #fff;
    }
    .center {
        padding: 0 70px;
        width: 100%;
        height: 44px;
        line-height: 44px;
        text-align: center;
        font-size: 20px;
        color: #fff;
    }
    .right {
        position: absolute;
        right: 8px;
        top: 0;
        width: 44px;
        height: 44px;
    }
}

//  顶部导航
