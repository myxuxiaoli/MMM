// 头部部分
#header {
    background-color: #ff841d;
    height: 50px;
    border-bottom: 1px solid #e6e6e6;
    .container-fluid {
        .row {
            .logo {
                padding: 12px;
                >a {
                    display: block;
                    height: 100%;
                    margin-left: 5px;
                    >img {
                        max-height: 25px;
                        width: 185px;
                        overflow: hidden;
                        line-height: 25px;
                    }
                }
            }
            .appdown {
                padding: 7px;
                >a {
                    display: block;
                    float: right;
                    >img {
                        max-height: 34px;
                    }
                }
            }
        }
    }
}

// 搜索框部分
.search {
    height: 50px;
    background-color: #fff;
    border-bottom: 1px solid #e6e6e6;
    .search1 {
        height: 30px;
        padding: 10px;
        position: relative;
        .searchtext {
            >input {
                border: 0;
                background-color: #f1f1f1;
                height: 30px;
                border-radius: 15px;
                width: 90%;
                line-height: 30px;
                font-size: 16px;
                padding-left: 5%;
            }
        }
        .searchbtn {
            >input {
                border: 0;
                width: 63px;
                color: #fff;
                border-radius: 15px;
                height: 30px;
                background-color: #ff841d;
                line-height: 30px;
                position: absolute;
                right: 10px;
                top: 10px;
                font-size: 16px;
            }
        }
    }
}

// 主体内容
#aspnetForm {
    // 标签导航
    background-color: #f2f2f2;
    .nav {
        height: 36px;
        line-height: 36px;
        background-color: #ebebeb;
        background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ebebeb));
        border-top: solid 1px #ebebeb;
        border-bottom: 1px solid #ccc;
        padding-left: 8px;
        font-size: 14px;
        >a {
            text-decoration: none;
            color: #5a5a5a;
        }
    }
    .main {
        .hot {
            font-size: 16px;
            color: #874604;
            height: 40px;
            padding-left: 10px;
            border: 1px solid #ccc;
            background-color: #eee;
            margin: 10px 5px;
            line-height: 40px;
        }
        .list {
            padding: 0px 10px;
            .fl_t {
                >a {
                    height: 40px;
                    background: url('http://www.zuyushop.com/wap/images/arrow1.gif') right center no-repeat;
                    font-size: 16px;
                    color: #000;
                    display: block;
                    border-bottom: 1px solid #ccc;
                    text-decoration: none;
                    line-height: 40px;
                    font-weight: bold;
                }
            }
        }
    }
    .model {
        .hd {
            color: #874604;
            background: #f3f3f3;
            border: 1px solid #c8c8c8;
            >h3 {
                display: block;
                line-height: 36px;
                font-size: 14px;
                padding-left: 10px;
                font-weight: bold;
            }
        }
        .sortlist {
            >ul {
                >li {
                    border-bottom: 1px solid #e7e7e7;
                    padding: 10px; // background: url('http://www.zuyushop.com/wap/images/arrow1.gif') right center no-repeat;
                    background-size: 20px 20px;
                    .abc {
                        float: left;
                        width: 20px;
                        height: 20px;
                        text-align: center;
                        color: #fff;
                        margin-right: 10px;
                        &.abc1 {
                            background-color: #f10e0e;
                        }
                        &.abc2 {
                            background-color: #ff9314;
                        }
                        &.abc3 {
                            background-color: #8adf5b;
                        }
                    }
                    >a {
                        display: block;
                        text-decoration: none;
                        color: #5a5a5a;
                        .inner {
                            display: inline-block;
                            .tit {
                                color: #000;
                                font-size: 16px;
                            }
                            >p {
                                font-size: 12px;
                                color: #999;
                                margin-top: 3px;
                                margin-left: 30px;
                                display: block;
                            }
                        }
                        .right {
                            display: block;
                            float: right;
                            font-size: 22px;
                            color: #ccc;
                        }
                    }
                }
            }
        }
    } // 销量排行
    .sales {
        .hd {
            color: #874604;
            background: #f3f3f3;
            border: 1px solid #c8c8c8;
            >h3 {
                display: block;
                line-height: 36px;
                font-size: 14px;
                padding-left: 10px;
                font-weight: bold;
                >a {
                    color: #874604;
                    text-decoration: none;
                }
            }
        }
        .prolist {
            >ul {
                >li {
                    border-bottom: 1px solid #e7e7e7;
                    padding: 10px;
                    >a {
                        display: block;
                        text-decoration: none;
                        color: #5a5a5a;
                        .pic {
                            float: left;
                            margin-right: 10px;
                            >img {
                                vertical-align: middle;
                                width: 100px;
                                height: 100px;
                            }
                        }
                        .info {
                            font-size: 14px;
                            line-height: 24px;
                            .tit {
                                
                            }
                        }
                    }
                }
            }
        }
    }
}